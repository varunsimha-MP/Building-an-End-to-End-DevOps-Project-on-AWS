pipeline {
    agent any
    environment {
        AWS_REGION = 'ap-southeast-1'
        AWS_ACCOUNT_ID = '590180045701'
        IMAGE_TAG = "build-${BUILD_NUMBER}"
        ECR_REPO = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/python_web_application"
        FULL_IMAGE = "${ECR_REPO}:${IMAGE_TAG}"
        REPO_URL = "https://github.com/varunsimha-MP/k8s_test.git"
    }

    stages {
        stage('Clone Repo') {
            steps {
                withCredentials([string(credentialsId: 'GITHUB_TOKEN', variable: 'github')]) {
                    sh '''
                        rm -rf k8s_repo || true
                        git clone https://$github@github.com/varunsimha-MP/k8s_test.git k8s_repo
                    '''
                }
            }
        }

        stage('Check for Jenkins_cicd changes') {
            steps {
                dir('k8s_repo') {
                    script {
                        def change = sh(script: "git diff origin/master --name-only | grep '^Jenkins_cicd/' || true", returnStdout: true).trim()
                        if (!change) {
                            echo "No changes in Jenkins_cicd/. Skipping build."
                            currentBuild.result = 'NOT_BUILT'
                            error('No changes in Jenkins_cicd/. Stopping pipeline.')
                        }
                    }
                }
            }
        }

        stage('Clean old Docker image') {
            steps {
                sh 'docker rmi -f python_web_application:latest || true'
            }
        }

        stage('Build Docker image') {
            steps {
                dir('k8s_repo/Jenkins_cicd') {
                    sh 'docker build -t python_web_application:${IMAGE_TAG} .'
                }
            }
        }

        stage('Push Docker image to ECR') {
            steps {
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REPO}
                    docker tag python_web_application:${IMAGE_TAG} ${FULL_IMAGE}
                    docker push ${FULL_IMAGE}
                '''
            }
        }

        stage('Update ArgoCD YAML') {
            steps {
                dir('k8s_repo/ArgoCD') {
                    sh '''
                        sed -i 's|image:.*|image: '"${FULL_IMAGE}"'|' appdeployment.yml
                    '''
                }
            }
        }

        stage('Commit and Push Changes') {
            steps {
                withCredentials([string(credentialsId: 'GITHUB_TOKEN', variable: 'github')]) {
                    dir('k8s_repo') {
                        sh '''
                            git config user.email "jenkins@ci.com"
                            git config user.name "Jenkins CI"
                            git add ArgoCD/appdeployment.yml
                            git commit -m "ðŸ”„ Updated image to ${FULL_IMAGE}" || echo "No changes to commit"
                            git push https://$github@github.com/varunsimha-MP/k8s_test.git HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
